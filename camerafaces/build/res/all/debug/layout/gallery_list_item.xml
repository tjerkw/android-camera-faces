<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/card_outer_padding">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_bg_r4"
        android:padding="0dp">

        <nl.tjerk.view.AspectRatioImageView
            android:id="@+id/image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:minHeight="120pt"
            android:clickable="true"
            android:background="@drawable/placeholder"

            android:layout_marginTop="@dimen/card_margin_horizontal"
            android:layout_marginLeft="@dimen/card_margin_horizontal"
            android:layout_marginRight="@dimen/card_margin_horizontal"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/item_toolbar"
            android:background="@color/item_card_bg"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:longClickable="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="@dimen/card_margin_horizontal"
            android:layout_marginRight="@dimen/card_margin_horizontal"
            android:layout_marginBottom="@dimen/card_margin_bottom">

            <Button
                android:id="@+id/share"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_menu_share_holo_light"
                android:layout_weight="0.2"
                android:text="@string/action_share"
                android:background="@drawable/transparent"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout><!-- From: file:/Users/tjerk/Development/workspace/CameraFaces/camerafaces/src/main/res/layout/gallery_list_item.xml -->